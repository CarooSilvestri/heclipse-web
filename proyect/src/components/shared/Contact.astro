---
// src/components/Contact.astro
const contactInfo = [
	{
		type: "email",
		title: "Email",
		value: "info@heclipse.com.ar",
		icon: "fas fa-envelope",
		href: "mailto:info@heclipse.com.ar"
	},
	{
		type: "whatsapp",
		title: "WhatsApp",
		value: "+54 9 3886 82-8566",
		icon: "fab fa-whatsapp",
		href: "https://wa.me/5493886828566"
	}
];
---

<section class="section cta-section" id="contacto" data-aos="fade-up">
	<div class="container">
		<!-- Encabezado CTA -->
		<div class="cta-content">
			<h2 class="cta-title">
				¿Listo para transformar <br/> la gestión de tu empresa?
			</h2>
			<p class="cta-subtitle">
				Contactanos hoy mismo y descubrí todo lo que podemos hacer por vos. <br/>
				 Te acompañamos paso a paso para evaluar juntos el sistema.
			</p>
		</div>

		<!-- Cards de contacto -->
		<div class="contact-info-section">
			<div class="contact-grid">
				{contactInfo.map((contact) => (
					<a 
						href={contact.href} 
						target="_blank" 
						class={`contact-card ${contact.type === 'whatsapp' ? 'contact-card-clickable' : ''}`}
					>
						<div class="contact-icon">
							<i class={contact.icon}></i>
						</div>
						<div class="contact-details">
							<h4 class="contact-title">{contact.title}</h4>
							<p class="contact-value">{contact.value}</p>
						</div>
					</a>
				))}
			</div>
		</div>
	</div>
</section>

<style>
	/* ===== SECCIÓN CTA ===== */
	.cta-section {
		background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
		position: relative;
		overflow: hidden;
	}

	.cta-section::before {
		content: '';
		position: absolute;
		inset: 0;
		background-image: url("https://images.unsplash.com/photo-1576091160550-2173dba999ef?q=80&w=2070");
		background-size: cover;
		background-position: center;
		opacity: 0.1;
		z-index: 1;
	}

	/* ===== CONTENIDO CTA ===== */
	.cta-content {
		position: relative;
		z-index: 2;
		text-align: center;
		padding: 4rem 0 2rem;
	}

	.cta-title {
		font-size: 3rem;
		font-weight: 700;
		color: white;
		margin-bottom: 1.5rem;
		line-height: 1.2;
	}

	.cta-subtitle {
		font-size: 1.25rem;
		color: rgba(255, 255, 255, 0.9);
		margin: 0;
		line-height: 1.5;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	/* ===== SECCIÓN CONTACTO ===== */
	.contact-info-section {
		position: relative;
		z-index: 2;
		padding: 3rem 0;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		max-width: 800px;
		margin: 0 auto;
	}

	/* ===== CARDS DE CONTACTO ===== */
	.contact-card {
		background: rgba(255, 255, 255, 0.15);
		border-radius: var(--border-radius-lg);
		padding: 1.5rem;
		display: flex;
		align-items: center;
		gap: 1.25rem;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		transition: all 0.3s ease;
		text-decoration: none;
		color: inherit;
	}

	.contact-card:hover {
		background: rgba(255, 255, 255, 0.25);
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
		text-decoration: none;
		color: inherit;
	}

	.contact-card-clickable:hover .contact-icon {
		background: rgba(37, 211, 102, 0.3);
		color: #25d366;
		transform: scale(1.1);
	}

	/* ===== ICONOS Y CONTENIDO ===== */
	.contact-icon {
		width: 60px;
		height: 60px;
		background: rgba(255, 255, 255, 0.2);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 1.5rem;
		flex-shrink: 0;
		transition: all 0.3s ease;
	}

	.contact-details {
		flex: 1;
	}

	.contact-title {
		font-size: 1.1rem;
		font-weight: 600;
		color: white;
		margin-bottom: 0.25rem;
	}

	.contact-value {
		color: rgba(255, 255, 255, 0.9);
		margin: 0;
		word-break: break-word;
		font-size: 0.95rem;
		line-height: 1.4;
	}

	/* ===== RESPONSIVE ===== */
	@media (max-width: 768px) {
		.cta-title {
			font-size: 2.5rem;
		}

		.cta-subtitle {
			font-size: 1.1rem;
		}

		.cta-content {
			padding: 2.5rem 0 1.5rem;
		}

		.contact-info-section {
			padding: 1.75rem 0;
		}

		.contact-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.contact-card {
			padding: 1.25rem;
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}

		.contact-icon {
			width: 50px;
			height: 50px;
			font-size: 1.2rem;
		}
	}
</style>
