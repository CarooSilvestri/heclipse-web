---
// src/components/WhyUs.astro
import Diferenciales from './Diferenciales.astro';

const whyChooseUsFeatures = [
	{
		icon: "bx bx-laptop",
		title: "Personalización Total",
		description: "Desarrollamos lo que necesitás, sin cargos adicionales",
	},
	{
		icon: "bx bx-cog",
		title: "Adaptable y Flexible",
		description: "Crece con vos — sin costos ocultos",
	},
	{
		icon: "bx bx-user-check",
		title: "Expertos en Salud + Tecnología",
		description: "Más de 25.000 hrs de desarrollo especializado",
	},
	{
		icon: "bx bx-time",
		title: "Decisiones en Tiempo Real",
		description: "Información crítica al instante, desde cualquier dispositivo",
	},
	{
		icon: "bx bx-shield",
		title: "Seguridad Garantizada",
		description: "HTTPS + subdominios + backup automático",
	},
	{
		icon: "bx bx-code-alt",
		title: "Tecnología Libre",
		description: "Java, Linux, PostgreSQL - Sin licencias costosas",
	},
];

const sectionContent = {
	title: "Beneficios para tu Institución",
	subtitle: "Impacto directo en tu operación diaria",
	description: "Con años de experiencia en el sector salud, entendemos las necesidades específicas de las instituciones médicas y desarrollamos soluciones personalizadas a medida."
};
---

<section class="why-us-section" id="por-que-elegirnos" data-aos="fade-up">
	<div class="container">
		<div class="columns is-vcentered">
			<!-- Content Column -->
			<div class="column is-5 content-column">
				<header class="section-header">
					<h2 class="section-title">
						{sectionContent.title.split(" ").slice(0, 2).join(" ")} 
						<span class="highlight">{sectionContent.title.split(" ").slice(2).join(" ")}</span>
					</h2>
					<p class="section-subtitle">{sectionContent.subtitle}</p>
					<p class="section-description">{sectionContent.description}</p>
				</header>
			</div>

			<!-- Features Grid Column -->
			<div class="column is-7">
				<div class="features-grid">
					{whyChooseUsFeatures.map((feature) => (
						<article class="feature-card">
							<div class="feature-content">
								<div class="feature-icon">
									<i class={feature.icon}></i>
								</div>
								<h3 class="feature-title">{feature.title}</h3>
								<p class="feature-description">{feature.description}</p>
							</div>
						</article>
					))}
				</div>
			</div>
		</div>
	</div>
</section>


<style>
	/* Section Styles */
	.why-us-section {
		background-color: var(--neutral-light, #f8f9fa);
		padding: 4rem 0;
		border-radius: 8px;
	}

	/* Content Column Styles */
	.content-column {
		padding-right: 2rem;
	}

	.section-header {
		max-width: 500px;
	}

	.section-title {
		font-size: 2rem;
		font-weight: 600;
		color: var(--text-dark, #1f2937);
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	.highlight {
		color: var(--secondary);
	}

	.section-subtitle {
		font-size: 1.25rem;
		color: var(--text-regular, #4b5563);
		margin-bottom: 1rem;
		line-height: 1.4;
	}

	.section-description {
		font-size: 1rem;
		color: var(--text-light, #6b7280);
		line-height: 1.6;
		margin-bottom: 0;
	}

	/* Features Grid Styles */
	.features-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5rem;
		padding: 0.5rem;
	}

	.feature-card {
		background: var(--bg-white, #ffffff);
		border-radius: var(--border-radius-md, 8px);
		padding: 1.25rem;
		border: 1px solid var(--border-light, #e5e7eb);
		position: relative;
		overflow: hidden;
		transition: all 0.3s ease;
	}

	.feature-card::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 3px;
		background: var(--primary);
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.3s ease;
	}

	.feature-card:hover {
		transform: translateY(-3px);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
	}

	.feature-card:hover::before {
		transform: scaleX(1);
	}

	.feature-content {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.feature-icon {
		font-size: 1.5rem;
		color: var(--secondary);
		margin-bottom: 0.75rem;
		display: block;
	}

	.feature-title {
		font-size: 1rem;
		font-weight: 700;
		color: var(--text-dark, #1f2937);
		margin-bottom: 0.5rem;
		line-height: 1.3;
	}

	.feature-description {
		font-size: 0.9rem;
		color: var(--text-light, #6b7280);
		line-height: 1.4;
		margin: 0;
		flex-grow: 1;
	}

	/* Responsive Design */
	@media screen and (max-width: 1215px) {
		.features-grid {
			gap: 1rem;
		}
	}

	@media screen and (max-width: 768px) {
		.why-us-section {
			padding: 3rem 0;
		}

		.content-column {
			padding-right: 1rem;
			padding-bottom: 2rem;
			text-align: center;
		}

		.section-title {
			font-size: 1.5rem;
			margin-bottom: 1rem;
		}

		.section-subtitle {
			font-size: 1.1rem;
			margin-bottom: 1rem;
		}

		.section-description {
			margin-bottom: 0;
		}

		.features-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 0.75rem;
			padding: 0;
		}

		.feature-card {
			padding: 1rem;
		}

		.feature-icon {
			font-size: 1.25rem;
			margin-bottom: 0.5rem;
		}

		.feature-title {
			font-size: 0.85rem;
			margin-bottom: 0.25rem;
			line-height: 1.2;
		}

		.feature-description {
			font-size: 0.75rem;
			line-height: 1.3;
		}
	}

	@media screen and (max-width: 480px) {
		.features-grid {
			grid-template-columns: 1fr;
			gap: 1rem;
		}

		.feature-card {
			padding: 1.25rem;
			text-align: center;
		}

		.feature-content {
			align-items: center;
		}

		.feature-icon {
			align-self: center;
			margin-bottom: 1rem;
		}

		.feature-title {
			font-size: 0.9rem;
		}

		.feature-description {
			font-size: 0.8rem;
		}
	}
</style>


