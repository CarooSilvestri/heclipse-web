---
// src/components/Technology.astro
const tecnologias = [
	{
		icon: "fas fa-cloud",
		title: "Infraestructura en la nube segura",
		description: "Hosting confiable con alta disponibilidad"
	},
	{
		icon: "fas fa-mobile-alt",
		title: "Acceso móvil, tablet y escritorio",
		description: "Multiplataforma y responsive"
	},
	{
		icon: "fas fa-globe",
		title: "DynDNS personalizado incluido",
		description: "Tu propio dominio personalizado"
	},
	{
		icon: "fas fa-shield-alt",
		title: "Copias de seguridad automáticas",
		description: "Backups programados y seguros"
	},
	{
		icon: "fas fa-chart-line",
		title: "Alta disponibilidad y escalabilidad",
		description: "Crece con tu negocio sin límites"
	}
];
---

<!-- Sección Tecnología que garantiza resultados -->
<section class="section" id="tecnologia" data-aos="fade-up">
	<div class="container">
		<div class="has-text-centered mb-6">
			<h2 class="title is-2 has-text-primary mb-4">Tecnología que garantiza resultados</h2>
			<p class="subtitle is-5 has-text-grey-dark">
				Infraestructura robusta y confiable para tu centro de salud
			</p>
		</div>

		<div class="tecnologia-grid">
			{tecnologias.map((tech, index) => (
				<div class="tecnologia-card" data-aos="zoom-in" data-aos-delay={index * 100}>
					<div class="tecnologia-icon">
						<i class={tech.icon}></i>
					</div>
					<h3 class="tecnologia-title">{tech.title}</h3>
					<p class="tecnologia-description">{tech.description}</p>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	/* Sección Tecnología */
	.tecnologia-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.tecnologia-card {
		background: var(--bg-white);
		border-radius: var(--border-radius-lg);
		padding: 2rem;
		text-align: center;
		transition: var(--transition-base);
		border: 1px solid var(--border-light);
		box-shadow: 0 2px 8px var(--shadow-color);
	}

	.tecnologia-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 12px 30px var(--shadow-color);
		border-color: var(--accent);
	}

	.tecnologia-icon {
		width: 70px;
		height: 70px;
		background: var(--accent);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 1.5rem;
		color: var(--text-dark);
		font-size: 1.8rem;
		transition: var(--transition-base);
	}

	.tecnologia-card:hover .tecnologia-icon {
		background: var(--primary);
		color: white;
		transform: scale(1.1);
	}

	.tecnologia-title {
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-dark);
		margin-bottom: 1rem;
	}

	.tecnologia-description {
		color: var(--text-light);
		line-height: 1.5;
		margin: 0;
	}

	@media (max-width: 768px) {
		.tecnologia-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.tecnologia-card {
			padding: 1.5rem;
		}

		.tecnologia-icon {
			width: 60px;
			height: 60px;
			font-size: 1.5rem;
		}
	}
</style> 