---
// src/components/home/Diferenciales.astro
import gestionMedica from "../../assets/Que-es-la-gestion-medica-1.webp";

const diferenciales = [
	{
		icon: "bx bx-dollar-circle",
		title: "Licencias cero ($0)",
		description: "Apuesta por software gratuito y abierto: Linux, OpenJDK, PostgreSQL, Chrome."
	},
	{
		icon: "bx bx-shield",
		title: "Seguridad y respaldo",
		description: "Backups automáticos, confidencialidad, exportación completa de datos al dar de baja el servicio."
	},
	{
		icon: "bx bx-support",
		title: "Soporte profesional",
		description: "Acompañamos tu implementación local o en la nube y brindamos soporte tras los primeros 3 meses de uso."
	},
	{
		icon: "bx bx-user-circle",
		title: "Roles y permisos configurables",
		description: "Cada usuario accede solo a lo que necesita (ej. secretaria vs contador vs médico)."
	}
];

const sectionContent = {
	title: "Cómo lo Hacemos Diferente",
	subtitle: "Nuestro enfoque único en el mercado",
	description: "Características distintivas que garantizan el mejor valor y experiencia para tu institución médica."
};
---

<section class="diferenciales-section" id="diferenciales" data-aos="fade-up">
	<div class="container">
		<div class="has-text-centered mb-6">
			<h2 class="title is-2 mb-4">
				<span class="title-dark">Nuestros</span> <span class="highlighted-word">Diferenciales</span>
			</h2>
			<p class="subtitle is-5 has-text-grey-dark mb-5">
				{sectionContent.subtitle}
			</p>
		</div>

		<div class="columns is-vcentered">
			<!-- Image Column -->
			<div class="column is-5" data-aos="fade-right">
				<div class="image-container">
					<img src={gestionMedica.src} alt="Gestión médica profesional" class="diferencial-image">
				</div>
			</div>

			<!-- Diferenciales List Column -->
			<div class="column is-7" data-aos="fade-left">
				<div class="diferenciales-list">
					{diferenciales.map((diferencial, index) => (
						<div class="diferencial-item" data-aos="fade-up" data-aos-delay={index * 100}>
							<div class="diferencial-icon">
								<i class={diferencial.icon}></i>
							</div>
							<div class="diferencial-content">
								<h3 class="diferencial-title">{diferencial.title}</h3>
								<p class="diferencial-description">{diferencial.description}</p>
							</div>
						</div>
					))}
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.diferenciales-section {
		background-color: var(--neutral-light, #f8f9fa);
		padding: 3rem 0 5rem 0;
	}

	.title-dark {
		color: var(--text-dark);
		font-weight: 600;
	}

	.highlighted-word {
		color: var(--secondary);
		font-weight: 700;
	}

	.image-container {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 1rem;
	}

	.diferencial-image {
		max-width: 100%;
		height: auto;
		max-height: 280px;
		object-fit: cover;
		border-radius: 12px;
		filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.1));
	}

	.diferenciales-list {
		padding-left: 1.5rem;
	}

	.diferencial-item {
		display: flex;
		align-items: flex-start;
		margin-bottom: 1.8rem;
		padding: 0;
		background: transparent;
		border: none;
		transition: all 0.3s ease;
	}

	.diferencial-item:hover {
		transform: translateX(5px);
	}

	.diferencial-item:last-child {
		margin-bottom: 0;
	}

	.diferencial-icon {
		font-size: 1.2rem;
		color: white;
		margin-right: 1.2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		background: var(--primary);
		border-radius: 50%;
		flex-shrink: 0;
		transition: all 0.3s ease;
	}

	.diferencial-content {
		flex: 1;
		padding-top: 0.25rem;
	}

	.diferencial-title {
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-dark);
		margin-bottom: 0.3rem;
		line-height: 1.3;
		transition: all 0.3s ease;
	}

	.diferencial-description {
		font-size: 0.9rem;
		color: var(--text-light);
		line-height: 1.4;
		margin: 0;
		flex-grow: 1;
	}

	/* Efectos de resaltado */
	.diferencial-item:hover .diferencial-icon {
		transform: scale(1.1);
		background: var(--secondary);
		box-shadow: 0 4px 15px rgba(198, 139, 46, 0.3);
	}

	.diferencial-item:hover .diferencial-title {
		color: var(--primary);
		transform: translateX(5px);
	}

	@media screen and (max-width: 768px) {
		.diferenciales-section {
			padding: 3rem 0;
		}

		.columns {
			display: flex;
			flex-direction: column;
		}

		.image-container {
			padding: 1rem;
			margin-bottom: 2rem;
		}

		.diferencial-image {
			max-height: 250px;
		}

		.diferenciales-list {
			padding-left: 0;
		}

		.diferencial-item {
			padding: 1.25rem;
			margin-bottom: 1.5rem;
		}

		.diferencial-icon {
			width: 45px;
			height: 45px;
			font-size: 1.5rem;
			margin-right: 1rem;
		}

		.diferencial-title {
			font-size: 1.1rem;
			margin-bottom: 0.5rem;
		}

		.diferencial-description {
			font-size: 0.9rem;
		}
	}

	@media screen and (max-width: 480px) {
		.diferencial-item {
			padding: 1rem;
			flex-direction: column;
			text-align: center;
			align-items: center;
		}

		.diferencial-icon {
			margin-right: 0;
			margin-bottom: 1rem;
			width: 40px;
			height: 40px;
			font-size: 1.3rem;
			align-self: center;
		}

		.diferencial-content {
			text-align: center;
			align-items: center;
		}

		.diferencial-title {
			font-size: 1rem;
		}

		.diferencial-description {
			font-size: 0.85rem;
		}
	}
</style> 