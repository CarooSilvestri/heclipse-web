---
// src/components/Solutions.astro
const solutionAreas = [
	{
		icon: "fas fa-user-md",
		title: "Gestión Médica",
		description: "Historia clínica, turnos, quirófano y seguimiento integral de pacientes",
		modules: ["Historia Clínica Electrónica", "Gestión de Turnos", "Laboratorio e Imágenes"]
	},
	{
		icon: "fas fa-calculator",
		title: "Administración y Finanzas", 
		description: "Facturación, contabilidad, AFIP y control financiero completo",
		modules: ["Facturación Integral", "Módulo Contable", "Gestión de Deudores"]
	},
	{
		icon: "fas fa-users",
		title: "Recursos Humanos",
		description: "Liquidación de sueldos, guardias y gestión completa de personal",
		modules: ["Liquidación de Sueldos", "Gestión de Guardias", "Honorarios Médicos"]
	}
];
---

<!-- Sección: ¿Qué Resolvemos? -->
<section class="section" id="que-resolvemos" data-aos="fade-up">
	<div class="container">
		<div class="has-text-centered mb-6">
			<h2 class="title is-2 has-text-primary mb-4">¿Qué resolvemos?</h2>
			<p class="subtitle is-5 has-text-grey-dark">
				Una plataforma web todo-en-uno para gestionar tu centro de salud
			</p>
		</div>

		<div class="columns is-variable is-6">
			{solutionAreas.map((area, index) => (
				<div class="column is-4" data-aos="fade-up" data-aos-delay={index * 100}>
					<div class="solution-card">
						<div class="solution-icon">
							<i class={area.icon}></i>
						</div>
						<h3 class="solution-title">{area.title}</h3>
						<p class="solution-description">{area.description}</p>
						<div class="solution-modules">
							{area.modules.map((module) => (
								<span class="module-tag">{module}</span>
							))}
						</div>
					</div>
				</div>
			))}
		</div>

		<div class="has-text-centered mt-6">
			<a href="/modulos" class="cta-button-blue">
				<span>Ver todas nuestras soluciones</span>
				<span class="icon">
					<i class="fas fa-arrow-right"></i>
				</span>
			</a>
		</div>
	</div>
</section>

<style>
	/* ===== SECCIÓN PRINCIPAL ===== */
	.solution-card {
		background: var(--bg-white);
		border-radius: var(--border-radius-lg);
		padding: 2.5rem 2rem;
		text-align: center;
		height: 100%;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
		border: 1px solid var(--border-light);
		transition: var(--transition-base);
	}

	.solution-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
	}

	.solution-icon {
		width: 80px;
		height: 80px;
		background: #f8f9fa;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 1.5rem;
		color: var(--primary);
		font-size: 2rem;
		transition: var(--transition-base);
		border: 2px solid #e9ecef;
	}

	.solution-card:hover .solution-icon {
		background: var(--secondary);
		color: white;
		transform: scale(1.1);
		border-color: var(--secondary);
	}

	.solution-title {
		font-size: 1.3rem;
		font-weight: 600;
		color: var(--text-dark);
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.solution-description {
		color: var(--text-light);
		font-size: 0.95rem;
		line-height: 1.5;
		margin-bottom: 1.5rem;
	}

	.solution-modules {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		justify-content: center;
	}

	.module-tag {
		background: #e9ecef;
		color: #495057;
		font-size: 0.75rem;
		font-weight: 500;
		padding: 0.25rem 0.75rem;
		border-radius: 15px;
		transition: var(--transition-base);
	}

	.solution-card:hover .module-tag {
		background: var(--primary);
		color: white;
	}

	/* ===== BOTÓN CTA AZUL ===== */
	.cta-button-blue {
		background: var(--primary);
		color: white;
		border: none;
		padding: 1rem 2rem;
		border-radius: 50px;
		font-size: 1.1rem;
		font-weight: 600;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
	}

	.cta-button-blue:hover {
		background: var(--primary-dark);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
		color: white;
		text-decoration: none;
	}

	.cta-button-blue .icon {
		transition: transform 0.3s ease;
	}

	.cta-button-blue:hover .icon {
		transform: translateX(3px);
	}

	/* ===== RESPONSIVE ===== */
	@media (max-width: 768px) {
		.columns {
			flex-direction: column;
		}

		.solution-icon {
			width: 60px;
			height: 60px;
			font-size: 1.5rem;
		}

		.solution-title {
			font-size: 1.1rem;
		}

		.solution-description {
			font-size: 0.9rem;
		}

		.module-tag {
			font-size: 0.7rem;
			padding: 0.2rem 0.6rem;
		}
	}

	@media (max-width: 480px) {
		.columns {
			gap: 0.5rem !important;
		}

		.solution-card {
			padding: 1.5rem 1rem;
			margin-bottom: 0;
		}

		.solution-icon {
			width: 55px;
			height: 55px;
			font-size: 1.3rem;
		}

		.solution-title {
			font-size: 1rem;
		}

		.solution-description {
			font-size: 0.85rem;
		}
	}
</style> 