---
import diagnosticImage from '../../assets/DiagnosticImaging.jpg';

const clients = [
	{ 
		name: "Sanatorios y Clínicas",
		active: true,
		description: "Gestionás consultorios, turnos, farmacia, laboratorio e internación con un flujo de trabajo integrado que mejora la atención y optimiza los recursos.",
		image: "https://images.unsplash.com/photo-1571772996211-2f02c9727629?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&h=600"
	},
	{ 
		name: "Centros de diagnóstico por imágenes",
		active: false,
		description: "Administrás agendas, equipos, estudios, informes y facturación a obras sociales desde una plataforma centralizada y ágil.",
		image: diagnosticImage.src
	},
	{ 
		name: "Hospitales",
		active: false,
		description: "Controlás todo el circuito operativo: admisión, guardia, quirófano, camas, contabilidad y RR.HH., con trazabilidad completa y en tiempo real.",
		image: "https://images.unsplash.com/photo-1516549655169-df83a0774514?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&h=600"
	},
	{ 
		name: "Colegios médicos/Cámaras de Salud",
		active: false,
		description: "Manejás matrículas, cuotas, capacitaciones y certificaciones, centralizando la gestión institucional y la relación con los profesionales.",
		image: "https://images.unsplash.com/photo-1638202993928-7267aad84c31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&h=600"
	}
];

const heroContent = {
	title: "Instituciones que confían en nuestra tecnología",
	subtitle: "Ellos ya confiaron. Vos también podés."
};
---

<!-- Hero Section con diseño de Alephoo -->
<section class="hero-section" id="clientes">
	<div class="hero-container">
		<div class="hero-content">
			<!-- Main Title -->
			<h1 class="hero-title">{heroContent.title}</h1>
			
			<!-- Subtitle -->
			<p class="hero-subtitle">{heroContent.subtitle}</p>

			<!-- Client Pills -->
			<div class="client-pills">
				{clients.map((client, index) => (
					<span 
						class={`client-pill ${client.active ? 'active' : ''}`}
						data-client={index}
					>
						{client.name}
					</span>
				))}
			</div>

			
			
			<!-- Dynamic Description -->
			<div class="client-descriptions">
				{clients.map((client, index) => (
					<div 
						class={`client-description ${client.active ? 'active' : ''}`}
						data-description={index}
					>
						<p class="client-description-text">{client.description}</p>
					</div>
				))}
			</div>
		</div>

		<!-- Client Images -->
		<div class="client-images">
			{clients.map((client, index) => (
				<div 
					class={`client-image ${client.active ? 'active' : ''}`}
					data-image={index}
				>
					<img src={client.image} alt={client.name} />
				</div>
			))}
		</div>
	</div>
</section>

<style>
	/* Hero Section - Fondo Blanco */
	.hero-section {
		background: white;
		padding: 120px 0;
		min-height: 80vh;
		display: flex;
		align-items: center;
		position: relative;
		overflow: hidden;
	}

	.hero-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.hero-content {
		color: #333;
	}

	/* Clients Title */
	.clients-title {
		color: var(--secondary);
		font-size: 1.1rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	/* Client Pills */
	.client-pills {
		display: flex;
		gap: 1rem;
		margin-bottom: 2rem;
		flex-wrap: wrap;
	}

	.client-pill {
		background: rgba(198, 139, 46, 0.1);
		border: 1px solid rgba(198, 139, 46, 0.3);
		color: #333;
		padding: 0.6rem 1.2rem;
		border-radius: 25px;
		font-size: 0.9rem;
		font-weight: 500;
		transition: all 0.3s ease;
		cursor: pointer;
	}

	.client-pill.active {
		background: var(--secondary);
		border-color: var(--secondary);
		color: white;
		transform: scale(1.05);
		box-shadow: 0 4px 15px rgba(201, 164, 61, 0.3);
	}

	.client-pill:hover {
		background: rgba(198, 139, 46, 0.3);
		border-color: rgba(198, 139, 46, 0.6);
		transform: scale(1.02);
	}

	/* Hero Title */
	.hero-title {
		font-size: 3.2rem;
		font-weight: 700;
		line-height: 1.1;
		margin-bottom: 1rem;
		color: #333;
	}

	/* Hero Subtitle */
	.hero-subtitle {
		font-size: 1.3rem;
		font-weight: 500;
		line-height: 1.4;
		margin-bottom: 2rem;
		color: #666;
		font-style: italic;
	}

	/* Client Descriptions */
	.client-descriptions {
		margin-top: 2rem;
		min-height: 120px;
		display: flex;
		align-items: flex-start;
	}

	.client-description {
		font-size: 1.1rem;
		line-height: 1.7;
		color: rgba(255, 255, 255, 0.95);
		max-width: 500px;
		margin: 0;
		opacity: 0;
		transform: translateY(10px);
		transition: all 0.4s ease;
		position: absolute;
		text-align: left;
	}

	.client-description.active {
		opacity: 1;
		transform: translateY(0);
		position: relative;
	}

	.client-category-title {
		color: var(--secondary);
		font-size: 1.3rem;
		font-weight: 600;
		margin: 0 0 0.8rem 0;
		line-height: 1.2;
	}

	.client-description-text {
		font-size: 1.1rem;
		line-height: 1.7;
		color: #666;
		margin: 0;
	}

	/* Client Images */
	.client-images {
		position: relative;
		width: 100%;
		height: 500px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.client-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0;
		transform: translateX(30px);
		transition: all 0.6s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.client-image.active {
		opacity: 1;
		transform: translateX(0);
	}

	.client-image img {
		width: 90%;
		height: 85%;
		object-fit: cover;
		border-radius: 25px;
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
		transition: all 0.4s ease;
	}

	.client-image:hover img {
		transform: scale(1.03);
		box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
	}

	/* Responsive Design */
	@media (max-width: 1024px) {
		.hero-section {
			padding: 60px 0;
		}

		.hero-container {
			grid-template-columns: 1fr;
			gap: 2.5rem;
			text-align: center;
		}

		.hero-title {
			font-size: 2.8rem;
			margin-bottom: 0.8rem;
		}

		.hero-subtitle {
			font-size: 1.2rem;
			margin-bottom: 1.5rem;
		}

		.hero-content {
			order: 1;
		}

		.client-images {
			order: 2;
			height: 300px;
		}

		.client-pills {
			margin-bottom: 1.5rem;
		}

		.client-descriptions {
			margin-top: 1.5rem;
			min-height: 100px;
		}
	}

	@media (max-width: 768px) {
		.hero-section {
			padding: 2.5rem 0;
		}

		.hero-container {
			padding: 0 1rem;
			gap: 2rem;
		}

		.hero-title {
			font-size: 1.9rem;
			margin-bottom: 0.6rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
			margin-bottom: 1.2rem;
		}

		.client-category-title {
			font-size: 1.2rem;
		}

		.client-description-text {
			font-size: 1rem;
			line-height: 1.5;
		}

		.client-pills {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 0.8rem;
			margin-bottom: 1.2rem;
			justify-items: center;
		}

		.client-pill {
			font-size: 0.75rem;
			padding: 0.6rem 0.8rem;
			width: 100%;
			text-align: center;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
		}

		.client-descriptions {
			margin-top: 1.2rem;
			min-height: 80px;
		}

		.client-images {
			height: 220px;
		}

		.client-image img {
			width: 95%;
			height: 90%;
			border-radius: 15px;
		}
	}

	@media (max-width: 480px) {
		.hero-section {
			padding: 2rem 0;
		}

		.hero-container {
			gap: 1.5rem;
		}

		.hero-title {
			font-size: 1.6rem;
			margin-bottom: 0.5rem;
		}

		.hero-subtitle {
			font-size: 1rem;
			margin-bottom: 1rem;
		}

		.client-pills {
			grid-template-columns: 1fr;
			gap: 0.6rem;
			margin-bottom: 1rem;
		}

		.client-pill {
			font-size: 0.8rem;
			padding: 0.7rem 1rem;
		}

		.client-descriptions {
			margin-top: 1rem;
			min-height: 70px;
		}

		.client-category-title {
			font-size: 1.1rem;
			margin-bottom: 0.5rem;
		}

		.client-description-text {
			font-size: 0.95rem;
			line-height: 1.4;
		}

		.client-images {
			height: 180px;
		}

		.client-image img {
			border-radius: 12px;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const clientPills = document.querySelectorAll('.client-pill');
		const clientDescriptions = document.querySelectorAll('.client-description');
		const clientImages = document.querySelectorAll('.client-image');

		clientPills.forEach((pill, index) => {
			pill.addEventListener('click', function() {
				
				// Remove active class from all elements
				clientPills.forEach(p => p.classList.remove('active'));
				clientDescriptions.forEach(d => d.classList.remove('active'));
				clientImages.forEach(img => img.classList.remove('active'));

				// Add active class to clicked elements
				pill.classList.add('active');
				if (clientDescriptions[index]) {
					clientDescriptions[index].classList.add('active');
				}
				if (clientImages[index]) {
					clientImages[index].classList.add('active');
				}
			});
		});
	});
</script> 