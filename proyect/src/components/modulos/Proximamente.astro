---
// src/components/Proximamente.astro
const proximamente = [
	{
		icon: "fas fa-robot",
		title: "Chatbots y recordatorios automáticos",
		subtitle: "por SMS/email"
	},
	{
		icon: "fas fa-user-circle",
		title: "Portal de pacientes",
		subtitle: "y videoconferencias"
	},
	{
		icon: "fas fa-video",
		title: "Módulo de telemedicina",
		subtitle: "Consultas remotas integradas"
	},
	{
		icon: "fas fa-chart-line",
		title: "Dashboard de indicadores",
		subtitle: "en tiempo real"
	}
];
---

<section class="section" id="proximamente" data-aos="fade-up">
	<div class="container">
		<div class="has-text-centered mb-6">
			<h2 class="title is-2 has-text-primary mb-4">Próximamente</h2>
			<p class="subtitle is-5 has-text-grey-dark">
				Nuevas funcionalidades en desarrollo
			</p>
		</div>

		<div class="features-mosaic">
			<div class="feature-box large-left" data-aos="fade-up">
				<i class={proximamente[0].icon}></i>
				<div class="content">
					<h3>{proximamente[0].title}</h3>
					<p>{proximamente[0].subtitle}</p>
					
				</div>
			</div>
			<div class="feature-box small-right" data-aos="fade-up" data-aos-delay="100">
				<i class={proximamente[1].icon}></i>
				<h3>{proximamente[1].title}</h3>
				<p>{proximamente[1].subtitle}</p>
				
			</div>
			<div class="feature-box third-left" data-aos="fade-up" data-aos-delay="200">
				<i class={proximamente[3].icon}></i>
				<h3>{proximamente[3].title}</h3>
				<p>{proximamente[3].subtitle}</p>
				
			</div>
			<div class="feature-box third-center" data-aos="fade-up" data-aos-delay="250">
				<i class={proximamente[2].icon}></i>
				<h3>{proximamente[2].title}</h3>
				<p>{proximamente[2].subtitle}</p>
				
			</div>
			<a href="/#contact" class="feature-box third-right custom-feature" data-aos="fade-up" data-aos-delay="300">
				<i class="fas fa-cogs"></i>
				<h3>¿Necesitás alguna funcionalidad específica?</h3>
				<p>Contactanos y la desarrollamos para vos</p>
			</a>
		</div>
	</div>
</section>

<style>
	.features-mosaic {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		grid-template-rows: 1fr 1fr;
		gap: 1.5rem;
		margin-top: 3rem;
		max-width: 900px;
		margin-left: auto;
		margin-right: auto;
		height: 400px;
	}

	.feature-box {
		background: var(--bg-white);
		border-radius: 10px;
		padding: 0.8rem 1.2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		transition: all 0.3s ease;
		border: 1px solid var(--border-light);
	}

	.feature-box:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 20px var(--shadow-color);
		border-color: var(--primary);
	}

	.large-left {
		grid-column: 1 / 3;
		grid-row: 1;
	}

	.small-right {
		grid-column: 3;
		grid-row: 1;
	}

	.third-left {
		grid-column: 1;
		grid-row: 2;
	}

	.third-center {
		grid-column: 2;
		grid-row: 2;
	}

	.third-right {
		grid-column: 3;
		grid-row: 2;
	}

	/* Layout horizontal para cajas grandes */
	.large-left {
		flex-direction: row;
		text-align: left;
		gap: 1.5rem;
		align-items: center;
	}

	.large-left i {
		margin-bottom: 0;
		flex-shrink: 0;
	}

	.large-left .content {
		flex: 1;
	}

	.feature-box i {
		font-size: 2.2rem;
		color: var(--primary);
		margin-bottom: 1rem;
		display: block;
	}

	.feature-box h3 {
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-dark);
		margin-bottom: 0.5rem;
		line-height: 1.3;
	}

	.feature-box p {
		color: var(--text-light);
		font-size: 0.9rem;
		line-height: 1.4;
		margin-bottom: 0.8rem;
	}

	.feature-box .soon {
		display: inline-block;
		color: var(--secondary);
		font-size: 0.85rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.custom-feature {
		background: var(--secondary);
		color: white;
		border: none;
		text-decoration: none;
		cursor: pointer;
	}

	.custom-feature:hover {
		transform: translateY(-5px);
		box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
		border: none;
		text-decoration: none;
		color: white;
	}

	.custom-feature i {
		color: white;
	}

	.custom-feature h3 {
		color: white;
	}

	.custom-feature p {
		color: rgba(255, 255, 255, 0.9);
	}

	.custom-feature .custom {
		display: inline-block;
		color: white;
		font-size: 0.85rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 1px;
		background: rgba(255, 255, 255, 0.2);
		padding: 0.3rem 0.8rem;
		border-radius: 15px;
	}



	@media (max-width: 768px) {
		.features-mosaic {
			grid-template-columns: 1fr;
			grid-template-rows: repeat(5, 1fr);
			gap: 1.5rem;
			margin-top: 3rem;
			height: auto;
		}

		.large-left,
		.small-right,
		.third-left,
		.third-center,
		.third-right {
			grid-column: 1;
		}

		.large-left {
			grid-row: 1;
		}

		.small-right {
			grid-row: 2;
		}

		.third-left {
			grid-row: 3;
		}

		.third-center {
			grid-row: 4;
		}

		.third-right {
			grid-row: 5;
		}

		/* En mobile, las cajas grandes vuelven a ser verticales */
		.large-left {
			flex-direction: column;
			text-align: center;
			gap: 0;
		}

		.large-left i {
			margin-bottom: 1.5rem;
		}

		.feature-box {
			padding: 0.8rem 1.2rem;
		}

		.feature-box i {
			font-size: 2.5rem;
		}

		.feature-box h3 {
			font-size: 1.2rem;
		}

		.feature-box p {
			font-size: 0.9rem;
		}
	}
</style> 