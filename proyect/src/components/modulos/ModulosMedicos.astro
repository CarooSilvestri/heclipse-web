---
// src/components/modulos/ModulosMedicos.astro
import backgroundImg from "../../assets/Que-es-la-gestion-medica-1.webp";

const modulosMedicos = [
	{
		title: "Historia Clínica Electrónica",
		subtitle: "Ambulatoria e Internación",
		features: [
			"Registro completo de consultas ambulatorias",
			"Seguimiento de internaciones",
			"Evoluciones médicas digitales",
			"Integración con estudios complementarios",
			"Historial médico completo del paciente",
			"Acceso desde cualquier dispositivo"
		],
		icon: "fas fa-file-medical"
	},
	{
		title: "Gestión de Turnos",
		subtitle: "Presenciales y Web + Llamada-turnos",
		features: [
			"Sistema de turnos online para pacientes",
			"Gestión de agenda médica",
			"Recordatorios automáticos por SMS/Email",
			"Reprogramación y cancelaciones",
			"Lista de espera automática",
			"Estadísticas de ocupación"
		],
		icon: "fas fa-calendar-check"
	},
	{
		title: "Laboratorio, Imágenes y Farmacia",
		subtitle: "Gestión Integral",
		features: [
			"Protocolos de laboratorio personalizables",
			"Carga y visualización de resultados",
			"Gestión de estudios por imágenes",
			"Control de stock farmacéutico",
			"Integración con equipos médicos",
			"Trazabilidad completa de medicamentos"
		],
		icon: "fas fa-flask"
	}
];
---

<section class="section" id="modulos-medicos">
	<!-- Hero Header -->
	<section class="hero is-medium modulos-medicos-hero" style={`background: #4CAF50 url(${backgroundImg.src}) center/cover no-repeat;`}>
		<div class="hero-overlay"></div>
		<div class="hero-body">
			<div class="container">
				<div class="has-text-centered">
					<h1 class="title is-1 has-text-white mb-4">
						<i class="fas fa-user-md mr-3"></i>
						Gestión Médica
					</h1>
					<p class="subtitle is-4 has-text-white">
						Herramientas especializadas para la atención médica profesional
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Módulos Content -->
	<div class="container">
		<div class="modules-grid">
			{modulosMedicos.map((modulo) => (
				<div class="module-card">
					<div class="module-header">
						<div class="module-icon medical">
							<i class={modulo.icon}></i>
						</div>
						<div class="module-title-section">
							<h3 class="module-title">{modulo.title}</h3>
							<p class="module-subtitle">{modulo.subtitle}</p>
						</div>
					</div>
					<div class="module-features">
						<ul>
							{modulo.features.map((feature) => (
								<li>
									<i class="fas fa-check-circle has-text-primary mr-2"></i>
									{feature}
								</li>
							))}
						</ul>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	/* Hero Header Styles */
	.modulos-medicos-hero {
		position: relative;
		min-height: 60vh;
		display: flex;
		align-items: center;
		margin-bottom: 4rem;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(46, 125, 50, 0.8);
		z-index: 1;
	}

	.modulos-medicos-hero .hero-body {
		position: relative;
		z-index: 2;
		padding: 3rem 1.5rem;
		display: flex;
		align-items: center;
		min-height: 60vh;
	}

	.modulos-medicos-hero .container {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.modulos-medicos-hero .title {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.modulos-medicos-hero .subtitle {
		font-size: 1.25rem;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.5;
	}

	/* Existing Module Styles */
	.modules-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-top: 3rem;
	}

	.module-card {
		background: var(--bg-white);
		border-radius: var(--border-radius-lg);
		padding: 2rem;
		transition: var(--transition-base);
		border: 1px solid var(--border-light);
		box-shadow: 0 2px 8px var(--shadow-color);
		height: 100%;
	}

	.module-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px var(--shadow-color);
	}

	.module-header {
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 2px solid var(--border-light);
	}

	.module-icon {
		width: 60px;
		height: 60px;
		border-radius: var(--border-radius-md);
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		color: white;
		flex-shrink: 0;
	}

	.module-icon.medical {
		background: var(--primary);
	}

	.module-title-section {
		flex: 1;
	}

	.module-title {
		font-size: 1.3rem;
		font-weight: 600;
		color: var(--text-dark);
		margin-bottom: 0.5rem;
	}

	.module-subtitle {
		color: var(--text-light);
		font-style: italic;
		margin: 0;
	}

	.module-features ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.module-features li {
		display: flex;
		align-items: flex-start;
		gap: 0.5rem;
		margin-bottom: 1rem;
		color: var(--text-light);
		line-height: 1.5;
	}

	.module-features li:last-child {
		margin-bottom: 0;
	}

	@media (max-width: 1024px) {
		.modules-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.module-card {
			padding: 1.5rem;
		}

		.module-header {
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}

		.module-icon {
			width: 50px;
			height: 50px;
			font-size: 1.2rem;
			margin: 0 auto;
		}

		/* Hero responsive styles */
		.modulos-medicos-hero .hero-body {
			padding: 2.5rem 1.5rem;
			min-height: 50vh;
		}

		.modulos-medicos-hero .title {
			font-size: 2.5rem;
		}

		.modulos-medicos-hero .subtitle {
			font-size: 1.1rem;
		}
	}

	@media (max-width: 480px) {
		.modulos-medicos-hero .hero-body {
			padding: 2rem 1rem;
			min-height: 45vh;
		}

		.modulos-medicos-hero .title {
			font-size: 2rem;
		}

		.modulos-medicos-hero .subtitle {
			font-size: 1rem;
		}
	}
</style> 