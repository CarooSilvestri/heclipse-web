---
// src/components/ModulosAdministrativos.astro
const modulosAdministrativos = [
	{
		title: "Facturación Integral",
		subtitle: "OS, Electrónica, Remitos, Órdenes de Pago",
		features: [
			"Facturación a obras sociales",
			"Factura electrónica AFIP",
			"Remitos automáticos por servicio/médico",
			"Órdenes de pago digitales",
			"Facturación de farmacia integrada",
			"Gestión de convenios y aranceles"
		],
		icon: "fas fa-file-invoice-dollar"
	},
	{
		title: "Módulo Contable",
		subtitle: "Asientos Automáticos, Reportes, Balances",
		features: [
			"Asientos contables automáticos",
			"Balance general y de resultados",
			"Libro diario e IVA",
			"Reportes financieros personalizables",
			"Integración con sistemas contables",
			"Análisis de rentabilidad"
		],
		icon: "fas fa-calculator"
	},
	{
		title: "Liquidación de Sueldos y Honorarios",
		subtitle: "Automatización Completa",
		features: [
			"Liquidación de sueldos del personal",
			"Cálculo de honorarios médicos",
			"Gestión de guardias y horarios",
			"Conceptos y fórmulas personalizadas",
			"Recibos digitales",
			"Integración con bancos"
		],
		icon: "fas fa-money-check-alt"
	},
	{
		title: "Compras y Proveedores",
		subtitle: "Control Total de Inventario",
		features: [
			"Gestión de proveedores",
			"Órdenes de compra automáticas",
			"Control de stock por sector",
			"Alertas de stock mínimo",
			"Costos y márgenes",
			"Trazabilidad de productos"
		],
		icon: "fas fa-shopping-cart"
	},
	{
		title: "Estadísticas y Business Intelligence",
		subtitle: "Para Tomar Mejores Decisiones",
		features: [
			"Dashboard ejecutivo en tiempo real",
			"Indicadores de gestión (KPIs)",
			"Reportes por servicio, médico, OS",
			"Análisis de rentabilidad",
			"Gráficos interactivos",
			"Exportación a Excel y PDF"
		],
		icon: "fas fa-chart-bar"
	},
	{
		title: "Integraciones",
		subtitle: "AFIP, Kairos, SIAp, CIE-10, APIs Externas",
		features: [
			"Integración con AFIP (factura electrónica)",
			"Conexión con Kairos (obras sociales)",
			"Exportación a SIAp",
			"Codificación CIE-10",
			"APIs para sistemas externos",
			"Sincronización con bancos"
		],
		icon: "fas fa-plug"
	}
];
---

<section class="section has-background-light" id="modulos-administrativos">
	<div class="container">
		<div class="has-text-centered mb-6">
			<h2 class="title is-2 has-text-secondary mb-4">
				<i class="fas fa-cogs mr-3"></i>
				Gestión Administrativa
			</h2>
			<p class="subtitle is-5 has-text-grey-dark">
				Automatización completa de procesos administrativos
			</p>
		</div>

		<div class="modules-grid">
			{modulosAdministrativos.map((modulo) => (
				<div class="module-card">
					<div class="module-header">
						<div class="module-icon admin">
							<i class={modulo.icon}></i>
						</div>
						<div class="module-title-section">
							<h3 class="module-title">{modulo.title}</h3>
							<p class="module-subtitle">{modulo.subtitle}</p>
						</div>
					</div>
					<div class="module-features">
						<ul>
							{modulo.features.map((feature) => (
								<li>
									<i class="fas fa-check-circle has-text-secondary mr-2"></i>
									{feature}
								</li>
							))}
						</ul>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.modules-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}

	.module-card {
		background: var(--bg-white);
		border-radius: var(--border-radius-lg);
		padding: 2rem;
		transition: var(--transition-base);
		border: 1px solid var(--border-light);
		box-shadow: 0 2px 8px var(--shadow-color);
		height: 100%;
	}

	.module-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px var(--shadow-color);
	}

	.module-header {
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 2px solid var(--border-light);
	}

	.module-icon {
		width: 60px;
		height: 60px;
		border-radius: var(--border-radius-md);
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		color: white;
		flex-shrink: 0;
	}

	.module-icon.admin {
		background: var(--secondary);
	}

	.module-title-section {
		flex: 1;
	}

	.module-title {
		font-size: 1.3rem;
		font-weight: 600;
		color: var(--text-dark);
		margin-bottom: 0.5rem;
	}

	.module-subtitle {
		color: var(--text-light);
		font-style: italic;
		margin: 0;
	}

	.module-features ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.module-features li {
		display: flex;
		align-items: flex-start;
		gap: 0.5rem;
		margin-bottom: 1rem;
		color: var(--text-light);
		line-height: 1.5;
	}

	.module-features li:last-child {
		margin-bottom: 0;
	}

	@media (max-width: 768px) {
		.modules-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.module-card {
			padding: 1.5rem;
		}

		.module-header {
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}

		.module-icon {
			width: 50px;
			height: 50px;
			font-size: 1.2rem;
			margin: 0 auto;
		}
	}
</style> 