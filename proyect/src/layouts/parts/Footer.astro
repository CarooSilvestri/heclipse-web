---
import { Image } from "astro:assets";
import logo from "../../assets/logo.png";
import logoCompleto from "../../assets/logo_completo.png";

const currentYear = new Date().getFullYear();

const socialLinks = [
	{ icon: "youtube", url: "https://www.youtube.com/channel/UCZSBzWj6DO1pdxFdiM9AKlw" },
	{ icon: "instagram", url: "https://www.instagram.com/heclipse.software?igsh=MTU2NzAyOHYxY2Rwcw==" },
	{ icon: "facebook", url: "https://www.facebook.com/profile.php?id=61575901882223" },
];

const siteMap = [
	{ text: "Inicio", href: "/" },
	{ text: "Módulos", href: "/modulos" },
	{ text: "¿Por qué Heclipse?", href: "/porque-heclipse" },
	{ text: "Nosotros", href: "/nosotros" },
	{ text: "Contacto", href: "#contacto" },
];
---

<footer class="footer has-background-white-ter">
	<div class="container">
		<div class="columns is-vcentered">
			<div class="column">
				<div class="content">
					<Image
						src={logoCompleto}
						alt="Logo"
						width={160}
						height={40}
						class="mb-4"
					/>
					<p class="has-text-grey">
						Soluciones tecnológicas para el sector salud, <br />
						diseñadas para hacer tu trabajo más eficiente.
					</p>
				</div>
			</div>

			<div class="column has-text-centered">
				<div class="social-links">
					{
						socialLinks.map(({ icon, url }) => (
							<a href={url} class="mx-2" target="_blank" rel="noopener noreferrer">
								<span class="icon is-medium">
									<i class={`fab fa-${icon} fa-lg`} />
								</span>
							</a>
						))
					}
				</div>
			</div>

			<div class="column">
				<h4 class="title is-6 mb-3 has-text-grey has-text-right">
					Mapa del sitio
				</h4>
				<ul class="site-map has-text-right">
					{
						siteMap.map(({ text, href }) => (
							<li>
								<a href={href} class="has-text-grey">
									{text}
								</a>
							</li>
						))
					}
				</ul>
			</div>
		</div>

		<div class="separator"></div>

		<div class="has-text-centered has-text-grey">
			<p>&copy; {currentYear} Heclipse. Todos los derechos reservados.</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		padding: 3rem 1.5rem;
		border-top: 1px solid var(--border-color);
		background-color: var(--bg-light);
	}

	.social-links a {
		color: var(--text-light);
		transition: var(--transition-base);
	}

	.social-links a:hover {
		color: var(--secondary);
	}

	.site-map {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.site-map li {
		margin-bottom: 0.5rem;
	}

	.site-map a {
		transition: var(--transition-base);
	}

	.site-map a:hover {
		color: var(--secondary) !important;
	}

	.divider {
		margin: 2rem 0;
		height: 1px;
		border: none;
	}

	.has-background-secondary {
		background-color: var(--secondary) !important;
	}

	.has-text-grey {
		color: var(--text-light) !important;
	}

	.separator {
		width: 100%;
		height: 0.5px;
		background-color: var(--secondary);
		margin: 2rem 0;
	}
</style>
